{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2017",
    "module": "ES2022",
    "esModuleInterop": true,
    "outDir": "build",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "isolatedModules": true,
    // "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "noLib": false,
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es2022", "esnext.asynciterable", "dom"],
    "types": [
      "@emotion/react",
      "@emotion/styled",
      "vitest/globals",
      "node",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "downlevelIteration": true
  },
  "include": ["src/**/*", "custom-typings/*"]
}
