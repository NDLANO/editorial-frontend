{
  "version": 2,
  "builds": [
    {
      "src": "build/public/**",
      "use": "@vercel/static"
    },
    {
      "src": "build/server.mjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=86400" },
      "dest": "build/public/static/$1"
    },
    {
      "src": "/(.*.(png|jpg|svg|gif))",
      "dest": "build/public/$1"
    },
    { "src": "/(.*)", "dest": "/build/server.mjs" }
  ],
  "env": {
    "IS_VERCEL": "true"
  }
}
